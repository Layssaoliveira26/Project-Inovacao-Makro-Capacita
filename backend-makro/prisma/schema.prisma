generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Submissao {
  id         Int    @id @default(autoincrement())
  nome       String
  desafioOrigem       String
  email      String @unique
  telefone   String
  descricao  String
  documento  String?
  status     String? @default("Em análise")
  createdAt  DateTime? @default(now())
}

model Formulario {
  id         Int    @id @default(autoincrement())
  nome       String
  email      String @unique
  celular   String
  descricao  String
  status     String? @default("Em análise")
  createdAt  DateTime? @default(now())
}

model Contatos {
  id         Int    @id @default(autoincrement())
  nome       String
  email      String @unique
  telefone   String
  descricao  String
  status     String? @default("Em análise")
  createdAt  DateTime? @default(now())
}

model Usuario {
  id    Int    @id @default(autoincrement())
  email String @unique
  senha String 
}

model Desafio {
  id    Int    @id @default(autoincrement())
  titulo String
  imagem String?
  descricao String 
}