generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Submissao {
  id            Int       @id @default(autoincrement())
  nome          String
  email         String
  telefone      String
  descricao     String
  nomeProjeto   String
  documento     String?
  status        String?   @default("Em análise")
  createdAt     DateTime? @default(now())
  desafioId     Int
  desafioOrigem Desafio   @relation(fields: [desafioId], references: [id])
}

model Contatos {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String
  telefone  String
  descricao String
  status    String?   @default("Em análise")
  createdAt DateTime? @default(now())
}

model Usuario {
  id    Int    @id @default(autoincrement())
  email String @unique
  senha String
}

model Desafio {
  id        Int         @id @default(autoincrement())
  titulo    String
  imagem    String
  descricao String
  resumo    String
  status    Boolean
  submissao Submissao[]
}

model Cases {
  id        Int     @id @default(autoincrement())
  titulo    String
  imagem    String
  descricao String
  resumo    String
  status    Boolean
}
